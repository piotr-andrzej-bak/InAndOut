@model InAndOut.Models.Expense

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Usuń wydatek</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName" disabled class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount" disabled class="form-control" />
                    </div>
                </div>
                <div  class="form-group text-right">
                              <input type="submit" class="btn btn-outline-info mx-1" style="width:75px" value="Usuń" />
                              <a asp-action="Index" class="btn btn-outline-danger mx-1" style="width:75px">Wstecz</a>
                </div>

            </div>
        </div>

    </div>
</form>
