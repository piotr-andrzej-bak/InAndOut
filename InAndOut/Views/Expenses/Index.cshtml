@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expenses" asp-action="Create" class="btn btn-outline-info">Dodaj wydatek</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nazwa wydatku
                    </th>
                    <th>
                        Kwota
                    </th>
                    <th class="text-center">Operacja</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.ExpenseName</td>
                        <td width="30%">@obj.Amount</td>
                        <td width="40%">
                            <div class="text-center">
                                <a asp-controller="Expenses" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-outline-info mx-1" style="width:75px">Edytuj</a>
                                <a asp-controller="Expenses" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-outline-warning mx-1" style="width:75px">Usuń</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>



        </table>
    }
    else
    {
        <p>Brak wydatków</p>
    }
</div>