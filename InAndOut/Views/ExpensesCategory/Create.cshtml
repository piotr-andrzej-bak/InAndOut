@model InAndOut.Models.ExpensesCategory

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Dodaj kategorię wydatku</h2>
        </div>

        <div class="row pl-3">
            <div class="form-group row col-12">
                <label asp-for="expensesCategory"></label>
            </div>
            <div class="form-group row col-12">
                <input asp-for="expensesCategory" class="form-control" />
                <span asp-validation-for="expensesCategory" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group text-right p-3">
            <input type="submit" class="btn btn-outline-info mx-1" style="width:75px" value="Dodaj" />
            <a asp-action="Index" class="btn btn-outline-danger mx-1" style="width:75px">Wstecz</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/>}
}