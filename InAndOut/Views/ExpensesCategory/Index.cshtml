    @model IEnumerable<InAndOut.Models.ExpensesCategory>

    <div class="container p-3">
        <div class="col-12 text-right">
            <a asp-controller="ExpensesCategory" asp-action="Create" class="btn btn-outline-info">Dodaj kategorię wydatku</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nazwa kategorii wydatku</th>
                    <th class="text-center">Operacja</th>
                </tr>
            </thead>
            <tbody>
                    @foreach(var obj in Model)
                    {
                        <tr>
                            <td width="60%">@obj.expensesCategory</td>
                            <td width="40%">
                                <div class="text-center">
                                    <a asp-controller="ExpensesCategory" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-outline-info mx-1" style="width:75px">Edytuj</a>
                                    <a asp-controller="ExpensesCategory" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-outline-warning mx-1" style="width:75px">Usuń</a>
                                </div>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    }
    else
    {
        <p>Brak kategorii wydatków</p>
    }