@model InAndOut.Models.ExpensesCategory

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <h2 class="form-group text-info pl-3">Edytuj kategorię</h2>


        <div class="form-group col-12">
            <label asp-for="expensesCategory"></label>
        </div>

        <div class="form-group col-12">
            <input asp-for="expensesCategory" class="form-control" />
        </div>

        <div class="form-group text-right col-12">
            <input type="submit" class="btn btn-outline-info mx-1" style="width:75px" value="Edytuj" />
            <a asp-action="Index" class="btn btn-outline-danger pl-1" style="width:75px">Wstecz</a>
        </div>
    </div>
</form>