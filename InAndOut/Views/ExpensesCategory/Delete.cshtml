@model InAndOut.Models.ExpensesCategory

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Usuń kategorię</h2>
        </div>
        <div class="col-12 row">
                <label asp-for="expensesCategory"></label>
        </div>
        <div class="form-group row p-3">
            <input asp-for="expensesCategory" disabled class="form-control" />
        </div>
        <div class="form-group text-right">
            <input type="submit" class="btn btn-outline-info mx-1" style="width:75px" value="Usuń" />
            <a asp-action="Index" class="btn btn-outline-danger mx-1" style="width:75px">Wstecz</a>
        </div>
    </div>
</form>